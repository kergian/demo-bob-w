{
  "name": "bob-w",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n 'client,server' -c '#ff0000,#ff8c00' 'npm run client' 'npm run server'",
    "client": "wait-on tcp:5500 && vite --port 3000",
    "server": "json-server --watch src/data/db.json --port 5500 --delay",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "update": "npx npm-check-updates --format group -i"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.0",
    "@reduxjs/toolkit": "^2.2.1",
    "antd": "^5.14.1",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "json-server": "^0.17.4",
    "npm-check-updates": "^16.14.15",
    "prettier": "^3.2.5",
    "sass": "^1.71.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "wait-on": "^7.2.0"
  }
}
